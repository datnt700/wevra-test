{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "esnext", // Ensures compatibility with modern JS
    "moduleResolution": "bundler", // Required for bundling
    "baseUrl": ".",
    "paths": {
      "@tavia/core/*": ["./src/*"]
    },
    "outDir": "dist",
    "rootDir": "src", // Ensures TypeScript knows where source files are
    "declaration": true, // Generates .d.ts files
    "declarationMap": true, // Enables source maps for .d.ts files
    "emitDeclarationOnly": false, // Ensures JS files are also emitted
    "jsxImportSource": "@emotion/react", // Supports Emotion JSX
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true, // Enables strict TypeScript checking
    "allowSyntheticDefaultImports": true, // Prevents module import issues
    "esModuleInterop": true, // Allows importing CommonJS modules
    "skipLibCheck": true // Speeds up build by skipping type checks for node_modules
  },
  "include": ["src", "types/theme.d.ts"],
  "exclude": ["node_modules", "dist"]
}
