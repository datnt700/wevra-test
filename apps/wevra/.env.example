# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3085
NEXT_PUBLIC_APP_NAME=Wevra

# Database (PostgreSQL Docker Container)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/wevra?schema=public"

# PostgreSQL Docker Container Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wevra

# Auth.js
AUTH_SECRET=your-secret-here-generate-with-npx-auth-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Agent Configuration
OPENAI_API_KEY=your-openai-api-key-here
TAVILY_API_KEY=your-tavily-api-key-here

# Analytics API (optional - leave empty to disable authentication)
ANALYTICS_API_KEY=

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
