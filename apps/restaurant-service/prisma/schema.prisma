// Restaurant Management Service - Prisma Schema
// Comprehensive schema for managing caf√©s and restaurants

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum RestaurantStatus {
  ACTIVE
  INACTIVE
  PENDING
  CLOSED
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  MAINTENANCE
}

enum MenuItemStatus {
  AVAILABLE
  UNAVAILABLE
  OUT_OF_STOCK
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SERVED
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// Main Models
model Restaurant {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  cuisine     String[]
  phone       String
  email       String
  website     String?

  // Address
  address   String
  city      String
  state     String
  zipCode   String @map("zip_code")
  country   String @default("USA")
  latitude  Float?
  longitude Float?

  // Business Details
  status     RestaurantStatus @default(ACTIVE)
  rating     Float?           @default(0)
  priceRange String?          @map("price_range") // $, $$, $$$, $$$$
  capacity   Int              @default(0)

  // Operating Hours (stored as JSON)
  operatingHours Json? @map("operating_hours")

  // Media
  logo       String?
  images     String[]
  coverImage String?  @map("cover_image")

  // Metadata
  tags     String[]
  features String[] // WiFi, Parking, Outdoor Seating, etc.
  metadata Json?

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  tables     Table[]
  menuItems  MenuItem[]
  categories Category[]
  orders     Order[]
  staff      Staff[]

  @@index([slug])
  @@index([city])
  @@index([status])
  @@map("restaurants")
}

model Table {
  id           String      @id @default(cuid())
  restaurantId String      @map("restaurant_id")
  number       String // Table number/identifier
  capacity     Int // Number of seats
  status       TableStatus @default(AVAILABLE)
  floor        String? // Floor/Section location
  position     Json? // x, y coordinates for floor plan
  qrCode       String?     @unique @map("qr_code")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  orders     Order[]

  @@unique([restaurantId, number])
  @@index([restaurantId])
  @@index([status])
  @@map("tables")
}

model Category {
  id           String  @id @default(cuid())
  restaurantId String  @map("restaurant_id")
  name         String
  description  String? @db.Text
  image        String?
  displayOrder Int     @default(0) @map("display_order")
  isActive     Boolean @default(true) @map("is_active")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  menuItems  MenuItem[]

  @@index([restaurantId])
  @@map("categories")
}

model MenuItem {
  id           String  @id @default(cuid())
  restaurantId String  @map("restaurant_id")
  categoryId   String? @map("category_id")

  name          String
  description   String? @db.Text
  price         Float
  discountPrice Float?  @map("discount_price")

  // Details
  ingredients String[]
  allergens   String[]
  calories    Int?
  prepTime    Int?     @map("prep_time") // in minutes

  // Media
  image  String?
  images String[]

  // Status & Availability
  status       MenuItemStatus @default(AVAILABLE)
  isVegetarian Boolean        @default(false) @map("is_vegetarian")
  isVegan      Boolean        @default(false) @map("is_vegan")
  isGlutenFree Boolean        @default(false) @map("is_gluten_free")
  isSpicy      Boolean        @default(false) @map("is_spicy")
  isPopular    Boolean        @default(false) @map("is_popular")
  isFeatured   Boolean        @default(false) @map("is_featured")

  // Metadata
  tags         String[]
  displayOrder Int      @default(0) @map("display_order")
  metadata     Json?

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  restaurant Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  category   Category?   @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  orderItems OrderItem[]

  @@index([restaurantId])
  @@index([categoryId])
  @@index([status])
  @@map("menu_items")
}

model Order {
  id           String  @id @default(cuid())
  restaurantId String  @map("restaurant_id")
  tableId      String? @map("table_id")
  orderNumber  String  @unique @map("order_number")

  // Customer Info (optional - could be anonymous)
  customerName  String? @map("customer_name")
  customerPhone String? @map("customer_phone")
  customerEmail String? @map("customer_email")

  // Order Details
  status OrderStatus @default(PENDING)
  type   String      @default("DINE_IN") // DINE_IN, TAKEOUT, DELIVERY

  // Pricing
  subtotal Float @default(0)
  tax      Float @default(0)
  tip      Float @default(0)
  discount Float @default(0)
  total    Float @default(0)

  // Payment
  paymentStatus PaymentStatus @default(PENDING) @map("payment_status")
  paymentMethod String?       @map("payment_method") // CASH, CARD, ONLINE

  // Timing
  placedAt    DateTime  @default(now()) @map("placed_at")
  confirmedAt DateTime? @map("confirmed_at")
  readyAt     DateTime? @map("ready_at")
  completedAt DateTime? @map("completed_at")

  // Notes
  notes               String? @db.Text
  specialInstructions String? @map("special_instructions") @db.Text

  // Metadata
  metadata Json?

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  restaurant Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  table      Table?      @relation(fields: [tableId], references: [id], onDelete: SetNull)
  items      OrderItem[]

  @@index([restaurantId])
  @@index([tableId])
  @@index([status])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id         String @id @default(cuid())
  orderId    String @map("order_id")
  menuItemId String @map("menu_item_id")

  quantity Int   @default(1)
  price    Float // Price at time of order
  subtotal Float // quantity * price

  notes String? @db.Text

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([menuItemId])
  @@map("order_items")
}

model Staff {
  id           String @id @default(cuid())
  restaurantId String @map("restaurant_id")

  // Personal Info
  firstName String @map("first_name")
  lastName  String @map("last_name")
  email     String @unique
  phone     String

  // Employment
  role     String // MANAGER, WAITER, CHEF, CASHIER, etc.
  hireDate DateTime @map("hire_date")
  isActive Boolean  @default(true) @map("is_active")

  // Work Schedule
  schedule Json? // Weekly schedule

  // Metadata
  avatar   String?
  metadata Json?

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@index([email])
  @@map("staff")
}
