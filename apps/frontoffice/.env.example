# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=App Template

# Database (PostgreSQL Docker Container)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/webapp?schema=public"

# PostgreSQL Docker Container Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=webapp

# NextAuth.js (for attendee social login)
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=your-secret-key-min-32-characters

# OAuth Providers (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Analytics API (optional - leave empty to disable authentication)
ANALYTICS_API_KEY=

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
