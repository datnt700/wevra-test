# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{app-name}?schema=public

# PostgreSQL Docker Container (for local development)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB={app-name}

# Analytics API (optional)
ANALYTICS_API_URL=http://localhost:3001
ANALYTICS_API_KEY=

# Client-side Variables (exposed to browser)
NEXT_PUBLIC_APP_URL=http://localhost:{port}
NEXT_PUBLIC_APP_NAME={app-name}

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# Skip Environment Validation (useful during build)
# SKIP_ENV_VALIDATION=true
