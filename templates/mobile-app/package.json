  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/react-native": "catalog:expo",
    "@types/jest": "^29.5.14",
    "@types/react": "catalog:react18",
    "eslint": "catalog:",
    "jest": "catalog:expo",
    "jest-expo": "catalog:expo",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
