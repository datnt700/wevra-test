# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# Project
project_name = "tavia"
domain_name  = "tavia.io"

# Subdomains
backoffice_subdomain  = "admin"
frontoffice_subdomain = "app"

# Database
db_name           = "tavia"
db_username       = "tavia_admin"
db_instance_class = "db.t4g.micro" # Free tier eligible
# db_password = "..." # Set via environment variable or secure input

# ECS Configuration
backoffice_cpu            = 512  # 0.5 vCPU
backoffice_memory         = 1024 # 1 GB
backoffice_desired_count  = 2
frontoffice_cpu           = 512
frontoffice_memory        = 1024
frontoffice_desired_count = 2

# Auto-scaling
min_capacity                = 2
max_capacity                = 10
target_cpu_utilization      = 70
target_memory_utilization   = 80

# Secrets (set via environment variables)
# TF_VAR_db_password="..."
# TF_VAR_nextauth_secret="..."
# TF_VAR_jwt_secret="..."
# TF_VAR_webhook_secret="..."
# TF_VAR_stripe_secret_key="sk_..."
# TF_VAR_stripe_webhook_secret="whsec_..."
