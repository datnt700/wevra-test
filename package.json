{
  "name": "tavia",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter=web dev",
    "dev:storybook": "pnpm --filter=@tavia/docs storybook:dev",
    "test": "turbo run test",
    "test:core": "pnpm --filter=@tavia/core test --run",
    "test:coverage": "pnpm --filter=@tavia/core test --coverage --run",
    "test:watch": "pnpm --filter=@tavia/core test --watch",
    "test:ui": "pnpm --filter=@tavia/core test --ui",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,scss,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,scss,yaml,yml}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "create:app": "node scripts/create-app.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "commitizen": "catalog:",
    "cz-conventional-changelog": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "catalog:",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=10.17.1"
  }
}
