{
  "name": "tavia",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:backoffice": "pnpm --filter=backoffice dev",
    "dev:frontoffice": "pnpm --filter=frontoffice dev",
    "dev:storybook": "pnpm --filter=@tavia/docs storybook:dev",
    "test": "turbo run test",
    "test:taviad": "pnpm --filter=@tavia/taviad test --run",
    "test:coverage": "pnpm --filter=@tavia/taviad test --coverage --run",
    "test:watch": "pnpm --filter=@tavia/taviad test --watch",
    "test:ui": "pnpm --filter=@tavia/taviad test --ui",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,scss,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,scss,yaml,yml}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "create:app": "node scripts/create-app.js",
    "create:api": "node scripts/create-api.js",
    "create:mobile": "node scripts/create-mobile.js",
    "db:setup": "node scripts/setup-database.js",
    "db:studio": "pnpm --filter=@tavia/frontoffice db:studio",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "chalk": "catalog:",
    "commitizen": "catalog:",
    "cz-conventional-changelog": "catalog:",
    "husky": "catalog:",
    "inquirer": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "catalog:",
    "typescript": "5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "engines": {
    "node": ">=22.17.1",
    "pnpm": ">=10.19.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  }
}
